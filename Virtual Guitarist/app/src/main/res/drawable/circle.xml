<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="#00350b0b" />
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="#00000000" />
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="2dip" android:color="#00080000" />
            <gradient android:angle="-90" android:startColor="#00052309" android:endColor="#00052309" />
        </shape>
    </item>
</selector>