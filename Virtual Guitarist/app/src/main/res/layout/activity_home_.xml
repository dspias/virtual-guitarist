<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_home_drawarLayout"
    tools:context=".Home_Activity" >

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/HomeHeadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Home_page_Image"

            android:layout_width="match_parent"
            android:background="@drawable/front1"
            android:layout_height="300dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/e3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:id="@+id/g2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="75dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp" >

            <Button
                android:id="@+id/button_id_P_guitarist"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"

                android:text="@string/play_guitar"
                android:textColor="@color/white"
                android:shadowColor="@color/AliceBlue"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:padding="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebutton"


                />

            <Button
                android:id="@+id/button_id_metronome"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                android:text="@string/Metronome"
                android:textColor="@color/white"
                android:shadowColor="@color/AliceBlue"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:padding="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/homebutton"


                />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>

<!-- The navigation drawer -->
<android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/nevigation_menu"
    app:headerLayout="@layout/nevigation_header"
    android:background="@drawable/allpagebackgrund"/>









</android.support.v4.widget.DrawerLayout>