<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_home_drawarLayout"
    tools:context=".Home_Activity" >

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allpagebackgrund" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/allpagebackgrund"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/HomeHeadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/home_header"

                android:textAlignment="center"
                android:textIsSelectable="false"
                android:textAllCaps="true"
                android:textSize="@dimen/header_size"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:shadowColor="@color/AliceBlue"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="10"
                android:padding="5dp"
                android:soundEffectsEnabled="true"
                android:selectAllOnFocus="true"
                android:layout_gravity="top" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Home_page_Image"

            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="08dp"
            android:layout_marginRight="08dp"
            android:background="@drawable/boxshadow"
            android:layout_height="@dimen/HomePageImage_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/guitar"
                android:scaleType="fitXY"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"


                android:layout_centerHorizontal="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp" >

            <Button
                android:id="@+id/button_id_P_guitarist"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:text="@string/play_guitar"
                android:textColor="@color/white"
                android:shadowColor="@color/AliceBlue"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:padding="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/boxshadow"


                />

            <Button
                android:id="@+id/button_id_metronome"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"


                android:text="@string/Metronome"
                android:textColor="@color/white"
                android:shadowColor="@color/AliceBlue"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"

                android:padding="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/boxshadow"


                />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>

<!-- The navigation drawer -->
<android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/nevigation_menu"
    app:headerLayout="@layout/nevigation_header"
    android:background="@drawable/allpagebackgrund"/>









</android.support.v4.widget.DrawerLayout>