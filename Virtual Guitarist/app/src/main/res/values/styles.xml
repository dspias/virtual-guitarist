<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8e030b</item>
        <item name="colorPrimaryDark">#462325</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="NumberPicker">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">70dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textColor">#0e9b15</item>
        <item name="android:textSize">20dp</item>
        <item name="android:popupBackground">@drawable/allpagebackgrund</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/holo_red_dark</item>
    </style>
    <style name="playGuitar_Signature">

        <item name="android:textColor">#0e9b15</item>
        <item name="android:textSize">20dp</item>

    </style>


</resources>
