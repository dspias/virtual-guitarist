<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#085e29</item>
        <item name="colorPrimaryDark">#b9125035</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="NumberPicker">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="Signature_spinner_style" >
        <item name="android:paddingLeft">10dp</item>
        <item name="android:dropDownWidth">60dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColorHint">#fffdfd</item>
        <item name="android:popupBackground">#6846bf</item>
        <item name="android:dropDownHeight">120dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="Strumming_spinner_style" >
        <item name="android:paddingRight">30dp</item>
        <item name="android:dropDownWidth">150dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:popupBackground">#e0108373</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/darker_gray</item>
    </style>

    <style name="NumberOfChord" >
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">60dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">#176b2c</item>
        <item name="android:dropDownHeight">120dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">#c2ffcd18</item>
    </style>

    <style name="chordName" >
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:dropDownWidth">60dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">#176b2c</item>
        <item name="android:dropDownHeight">120dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">#c2ffcd18</item>


        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="chordType" >
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:dropDownWidth">60dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">#a4a4a4</item>
        <item name="android:dropDownHeight">120dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">#c2ffcd18</item>
    </style>

    <style name="chordSerial" >
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/boxshadow</item>
    </style>
    <style name="chrodNameTypeBackground">
        <item name="android:background">#219e9c</item>
        <item name="android:layout_marginLeft">23dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
    </style>


</resources>
